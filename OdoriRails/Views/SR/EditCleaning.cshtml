@using System.Web.Mvc.Html
@using OdoriRails.Helpers.Objects
@model OdoriRails.Models.SRManagement.SRModel
@{
    ViewBag.Title = "EditService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>EditService</h2>


@using (Html.BeginForm("EditCleaning", "SR", FormMethod.Post))
{
    <p>
        <label>Start Date:</label>
        <br/>
        <input type="date" name="startDate" value="@Model.CleaningToEdit.StartDate">
        <br/>
        <label>End Date:</label>
        <br/>
        <input type="date" name="endDate" value="@Model.CleaningToEdit.EndDate">
        <br/>
        <label>Cleaning Size:</label>
        <br/>
        @Html.RadioButtonFor(x => x.CleaningToEdit.Size, CleaningSize.Big) Maintenance
        @Html.RadioButtonFor(x => x.CleaningToEdit.Size, CleaningSize.Small) Repair
        <label> Comment:</label>
        @Html.TextBoxFor(x => x.CleaningToEdit.Comments)
        <label> Tram Nummer:</label>
        @Html.TextBoxFor(x => x.CleaningToEdit.TramId)
        <label>Assigned Users:</label>

        @foreach (var user in Model.AssignedWorkers)
        {
            @Html.CheckBoxFor(x => x.AssignedWorkers[user.Key])

        }

        <input type="submit" value="EditCleaning"/>

    </p>
}
